<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/photo5"
    android:layout_height="match_parent"
    tools:context="ru.albert.weatherclient.MainActivity">

    <ru.albert.weatherclient.InstantAutoComplete
        android:id="@+id/autoCompleteTextView"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textSize="25sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="Начните вводить название города"
        app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView"
        app:layout_constraintStart_toStartOf="@+id/autoCompleteTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>